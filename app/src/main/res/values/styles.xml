<resources>
    <!-- 기본 테마, 배경에 그라데이션 추가 -->
    <style name="Theme.HipApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/neon_purple</item>
        <item name="colorPrimaryVariant">@color/neon_pink</item>
        <item name="colorSecondary">@color/neon_green</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowBackground">@drawable/gradient_background</item> <!-- 그라데이션 배경 -->
    </style>

    <!-- 둥근 버튼 스타일 -->
    <style name="Widget.HipButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/neon_yellow</item> <!-- 네온 노랑 -->
        <item name="cornerRadius">16dp</item> <!-- 둥근 버튼 -->
        <item name="android:textColor">@color/dark_text</item> <!-- 어두운 텍스트 -->
        <item name="android:textStyle">bold</item> <!-- 굵은 텍스트 -->
    </style>
</resources>
